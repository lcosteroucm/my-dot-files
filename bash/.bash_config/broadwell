#Configuraciones propias de broadwell

export HOME2="/homelocal/lcostero"
SOFTWARE_HOME=/opt


## PAPI ##
export PAPI_HOME=${SOFTWARE_HOME}/papi
export PAPI_LIB=${PAPI_HOME}/lib
export PAPI_INC=${PAPI_HOME}/include

export LD_LIBRARY_PATH=${PAPI_LIB}:$LD_LIBRARY_PATH
export PATH=${PAPI_HOME}/bin:$PATH


## MKL ##
export MKL_HOME=${SOFTWARE_HOME}/intel/mkl
source $MKL_HOME/bin/mklvars.sh intel64

export MKL_LIB=${MKL_HOME}/lib
export MKL_INC=${MKL_HOME}/include


## LAPACK ##
export LAPACK_HOME=${SOFTWARE_HOME}/lapack/   
export LAPACK_LIB=${LAPACK_HOME}/lib 
export LAPACK_INC=${LAPACK_HOME}/include

export LD_LIBRARY_PATH=${LAPACK_LIB}:$LD_LIBRARY_PATH


## BLIS ##
export BLIS_HOME=${SOFTWARE_HOME}/blis/
export BLIS_LIB=${BLIS_HOME}/lib
export BLIS_INC=${BLIS_HOME}/include/blis

export LD_LIBRARY_PATH=${BLIS_LIB}:$LD_LIBRARY_PATH


## LIBTRACKER2 ##
export LIBTRACKER2_HOME=/home/lcostero/libtracker2
export LIBTRACKER2_LIB=${LIBTRACKER2_HOME}/lib
export LIBTRACKER2_INC=${LIBTRACKER2_HOME}/include

export LD_LIBRARY_PATH=${LIBTRACKER2_LIB}:$LD_LIBRARY_PATH
