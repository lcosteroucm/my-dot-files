#Configuraciones propias de Kelvin

export PATH=/home/lcostero/local/bin:$PATH

SOFTWARE_HOME=/scratch/lcostero/Software

## OMPSS ##
export OMPSS_HOME=$SOFTWARE_HOME/ompss
export OMPSS_LIB=$OMPSS_HOME/lib

export PATH=$OMPSS_HOME/bin:$PATH

## EXTRAE ##
export EXTRAE_HOME=$SOFTWARE_HOME/extrae
export EXTRAE_INC=$EXTRAE_HOME/include
export EXTRAE_LIB=$EXTRAE_HOME/lib

export PATH=$EXTRAE_HOME/bin/:$PATH
export EXTRAE_CONFIG_FILE=extrae.xml

## PAPI ##
export PAPI_HOME=$SOFTWARE_HOME/papi
export PAPI_LIB=$PAPI_HOME/lib
export PAPI_INC=$PAPI_HOME/include

# Para referencia a libperf
export LD_LIBRARY_PATH=$PAPI_LIB:$LD_LIBRARY_PATH


## OPENCL ##
export OCL_HOME=/opt/intel/opencl
export OCL_LIB=$OCL_HOME/lib64
export OCL_INC=$OCL_HOME/include


## CUDA ##
export CUDA_HOME=/opt/cuda
export CUDA_LIB=$CUDA_HOME/lib64
export CUDA_INC=$CUDA_HOME/include


## MKL ##
export MKL_HOME=/opt/intel/mkl
source $MKL_HOME/bin/mklvars.sh intel64

export MKL_LIB=/opt/intel/mkl/lib
export MKL_INC=/opt/intel/mkl/include


## LIBTRACKER2 ##
export LIBTRACKER2_HOME=/home/lcostero/libtracker2
export LIBTRACKER2_LIB=${LIBTRACKER2_HOME}/lib
export LIBTRACKER2_INC=${LIBTRACKER2_HOME}/include

export LD_LIBRARY_PATH=$LIBTRACKER2_LIB:$LD_LIBRARY_PATH
